<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Tree View -->
        <record id="view_cong_viec_tag_tree" model="ir.ui.view">
            <field name="name">cong.viec.tag.tree</field>
            <field name="model">cong.viec.tag</field>
            <field name="arch" type="xml">
                <tree string="Nhãn công việc" editable="bottom">
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                    <field name="description"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record id="view_cong_viec_tag_form" model="ir.ui.view">
            <field name="name">cong.viec.tag.form</field>
            <field name="model">cong.viec.tag</field>
            <field name="arch" type="xml">
                <form string="Nhãn công việc">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="color" widget="color_picker"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description" placeholder="Mô tả nhãn..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Action -->
        <record id="action_cong_viec_tag" model="ir.actions.act_window">
            <field name="name">Nhãn công việc</field>
            <field name="res_model">cong.viec.tag</field>
            <field name="view_mode">tree,form</field>
        </record>
        
    </data>
</odoo>
