<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Tags mẫu -->
        <record id="tag_urgent" model="cong.viec.tag">
            <field name="name">Khẩn cấp</field>
            <field name="color">1</field>
            <field name="description">Công việc khẩn cấp cần xử lý ngay</field>
        </record>
        
        <record id="tag_bug" model="cong.viec.tag">
            <field name="name">Bug</field>
            <field name="color">9</field>
            <field name="description">Sửa lỗi hệ thống</field>
        </record>
        
        <record id="tag_feature" model="cong.viec.tag">
            <field name="name">Tính năng mới</field>
            <field name="color">3</field>
            <field name="description">Phát triển tính năng mới</field>
        </record>
        
        <record id="tag_improvement" model="cong.viec.tag">
            <field name="name">Cải tiến</field>
            <field name="color">5</field>
            <field name="description">Cải thiện tính năng hiện tại</field>
        </record>
        
        <record id="tag_documentation" model="cong.viec.tag">
            <field name="name">Tài liệu</field>
            <field name="color">7</field>
            <field name="description">Viết tài liệu hướng dẫn</field>
        </record>
        
    </data>
</odoo>
