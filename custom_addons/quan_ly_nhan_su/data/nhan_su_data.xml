<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Phòng ban mẫu -->
        <record id="phong_ban_it" model="phong.ban">
            <field name="code">IT</field>
            <field name="name">Công nghệ thông tin</field>
            <field name="sequence">10</field>
            <field name="description">&lt;p&gt;Phòng Công nghệ thông tin chịu trách nhiệm phát triển và vận hành hệ thống công nghệ.&lt;/p&gt;</field>
        </record>
        
        <record id="phong_ban_hr" model="phong.ban">
            <field name="code">HR</field>
            <field name="name">Nhân sự</field>
            <field name="sequence">20</field>
            <field name="description">&lt;p&gt;Phòng Nhân sự quản lý tuyển dụng, đào tạo và phát triển nhân viên.&lt;/p&gt;</field>
        </record>
        
        <record id="phong_ban_sales" model="phong.ban">
            <field name="code">SALES</field>
            <field name="name">Kinh doanh</field>
            <field name="sequence">30</field>
            <field name="description">&lt;p&gt;Phòng Kinh doanh phát triển thị trường và chăm sóc khách hàng.&lt;/p&gt;</field>
        </record>
        
        <record id="phong_ban_accounting" model="phong.ban">
            <field name="code">ACC</field>
            <field name="name">Kế toán</field>
            <field name="sequence">40</field>
            <field name="description">&lt;p&gt;Phòng Kế toán quản lý tài chính và kế toán công ty.&lt;/p&gt;</field>
        </record>
        
    </data>
</odoo>
